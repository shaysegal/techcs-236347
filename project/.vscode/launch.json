{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        /* This configuration runs the file from the current editor. */
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "lib:src"},
            "envFile": "${workspaceFolder}/.env",
            "console": "none",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        /* This configuration runs pix, regardless of
         * which editor has the focus. */
        {
            "name": "Python: wp",
            "type": "python",
            "request": "launch",
            "module": "while_lang",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "lib:src"},
            "envFile": "${workspaceFolder}/.env",
            "console": "none",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        /* This configuration runs the file from the current editor, but in
         * the "Terminal" tab, rather than "Debug Console". */
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "lib:src"},
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [],
            "internalConsoleOptions": "neverOpen"
        }
    ]
}